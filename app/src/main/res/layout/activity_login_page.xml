<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginPage">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginWithGoogle"
        android:layout_width="234dp"
        android:layout_height="44dp"
        android:layout_marginTop="580dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/rightcorner"
        android:fontFamily="@font/roboto_medium"
        android:text="Login with Google"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageLoginWithGoogle"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/imageLoginWithGoogle"
        android:layout_width="60dp"
        android:layout_height="44dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/leftcorner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/google___copy" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Or"
        android:textColorLink="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/registerLoginPage"
        app:layout_constraintEnd_toStartOf="@+id/view2"
        app:layout_constraintStart_toEndOf="@+id/view" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerLoginPage"
        android:layout_width="294dp"
        android:layout_height="44dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/roundcornergreen"
        android:fontFamily="@font/roboto_medium"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="150dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:background="#0000ff"
        app:layout_constraintBottom_toTopOf="@+id/registerLoginPage"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="150dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="24dp"
        android:background="#0000ff"
        app:layout_constraintBottom_toTopOf="@+id/registerLoginPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView" />


    <include
        android:id="@+id/loadingView"
        layout="@layout/loading"
        android:layout_width="104dp"
        android:layout_height="138dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>